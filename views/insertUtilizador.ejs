<!DOCTYPE html>
<html lang="PT-pt">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AccessTracking</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- custom css file link  -->
    <link rel="stylesheet" href="style.css">

</head>
<body onload="init();">
    
    <!-- header section starts  -->
    
    <header class="header">

      <a href="/" class="logo">
          <img src="images/at.png" alt="">
      </a>
    
      <nav class="navbar">
          <a href="#home">Home</a>
          <a href="#register">Register</a>
          <a href="/mainTracking">Tracking</a>
          <a href="/logout/"">logout</a>
          
      </nav>
      <div class="icons">
          <div class="fas fa-bars" id="menu-btn"></div>
          
      </div>
  
  
     
    </header>
    <!-- header section ends -->
    



    <!-- home section starts  -->

<section class="home" id="home">

    <div class="content">
        <h3>AccessTracking</h3>
        
        
    </div>

</section>

<!-- home section ends -->


<!-- about section starts  -->

<section class="resgisterLogin" id="register">

    <h1 class="heading"> <span>Register</span> User </h1>

    <div class="row">

        <div class="image">
            <img src="images/pencil.jpg" alt="">
        </div>

        <div class="content">
          <div class="container-fluid p-4 text-center"><h1>Dados do utilizador</h1>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-sm-6">
            <label 
            for="nome" 
            class="col-sm-12 col-form-label">Nome completo:
            </label>
            <input 
              class="form-control" 
              type="text" 
              id="nome"
              placeholder="Nome completo...">
            </div>
            <div class="col-sm-6">
              <label 
              for="morada_rua" 
              class="col-sm-2 col-form-label">Morada:</label>
              <input 
                class="form-control" 
                type="text" 
                id="morada_rua"
                placeholder="Rua...">   
            </div>
          </div>



            <div class="row">
                <div class="col-sm-3">
                  <label 
                  for="morada_num" 
                  class="col-sm-2 col-form-label">Nº:</label>
                  <input 
                    class="form-control" 
                    type="text" 
                    id="morada_num"
                    placeholder="Nº...">
                </div>
                  <div class="col-sm-3">
                    <label 
                    for="dnasc" 
                    class="col-sm-12 col-form-label">Data nascimento:</label>
                    <input 
                      class="form-control" 
                      type="date" 
                      id="dnasc"
                      placeholder="Data de nascimento...">
                  </div>
                  <div class="col-sm-6">
                    <label 
                    for="email" 
                     class="col-sm-2 col-form-label">Email:</label>
                    <input 
                      class="form-control" 
                      type="email" 
                      id="email"
                       placeholder="email...">
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-3">
                    <label 
                    for="telem" 
                    class="col-sm-2 col-form-label">Telemóvel:</label>
                    <input 
                      class="form-control" 
                      type="text" 
                      id="telem"
                      placeholder="nº telemóvel...">
                  </div>
                  
                  
                  <div class="col-sm-3">
                    <label 
                    for="tipo" 
                    class="col-sm-2 col-form-label">Tipo:</label>
                      <select 
                        class="form-select" id="tipo">
                      </select>
                  </div>

                  <div class="col-sm-3">
                    <label 
                    for="tag" 
                    class="col-sm-6 col-form-label">card tag:</label>
                    <input 
                      class="form-control" 
                      type="text" 
                      id="tag"
                      placeholder="tag...">
                  </div>
               
                  <div class="col-sm-3">
                    <button  type="button" onclick="readCard()" class="btn">tag</button>
                  </div>

                </div>                 
               
            </div>

            <div class="col-sm-3">
              <button  type="button" onclick="insertUtilizador()" class="btn">Adicionar</button>
            </div>



        </div>

    </div>

</section>

<!-- about section ends -->



<!-- footer section starts  -->
  

<section class="footer">

    <div class="share">
        <a href="https://www.facebook.com/escoladenovastecnologias/" class="fab fa-facebook-f"></a>
        <a href="https://twitter.com/Oklaw_1337" class="fab fa-twitter"></a>
        <a href="https://www.instagram.com/enta_inova/" class="fab fa-instagram"></a>
        
       
    </div>

    <div class="links">
        <a href="#">home</a>
        <a href="#register">Register</a>
       
        <% if(!isAuthenticated) { %>
          <a href="/login/"">login</a>
          
      <% } else { %>
          <a href="/logout/"">logout</a>
         
     <%  } %>
        
    </div>

    <div class="credit">created by <span>Nelson Teixeira</span> | all rights reserved From <a href="https://www.enta.store/" target="_blank">ENTA</a></div>

</section>



<!-- footer section ends -->


